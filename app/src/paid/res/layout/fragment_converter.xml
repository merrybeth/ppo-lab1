<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_text_input"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:ems="5"
                android:focusable="false"
                android:inputType="number"
                android:longClickable="false"/>
            <Spinner
                android:id="@+id/spinner_convert_from"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text_result"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false" />
            <Spinner
                android:id="@+id/spinner_convert_to"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/copy"
                android:layout_width="50dp"
                android:src="@drawable/copy"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/put"
                android:src="@drawable/put"
                android:layout_marginLeft="40dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Put" />

            <ImageButton
                android:id="@+id/switch_input"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="Switch"
                android:src="@drawable/turn"
                android:layout_marginLeft="100dp"
                android:background="@drawable/turn" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>




